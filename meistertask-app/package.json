{
  "name": "meistertask-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm run api | ng serve --host 0.0.0.0 --port 3000 --environment=local",
    "start.dev": "npm run api | ng serve --host 0.0.0.0 --port 3000 --target=development --environment=dev",
    "start.stag": "npm run api | ng serve --host 0.0.0.0 --port 3000 --target=production --environment=stag",
    "start.prod": "npm run api | ng serve --host 0.0.0.0 --port 3000 --target=production --environment=prod",
    "build": "ng build --environment=local",
    "build.dev": "ng build --target=development  --environment=dev",
    "build.stag": "ng build --target=production --environment=stag",
    "build.prod": "ng build --target=production --environment=prod",
    "test": "ng test",
    "lint": "tslint \"src/**/*.ts\" -e \"src/app/mock-data/**/*.ts\"",
    "e2e": "ng e2e",
    "api": "json-server -p 8000 --watch server/api/db.json --routes server/api/routes.json"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^2.4.0",
    "@angular/compiler": "^2.4.0",
    "@angular/core": "^2.4.0",
    "@angular/forms": "^2.4.0",
    "@angular/http": "^2.4.0",
    "@angular/platform-browser": "^2.4.0",
    "@angular/platform-browser-dynamic": "^2.4.0",
    "@angular/router": "^3.4.0",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^2.0.3",
    "@ngrx/store": "^2.2.2",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "immutable": "^3.8.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "ng2-dnd": "^4.1.0",
    "ngx-dropdown": "0.0.22",
    "ngx-modal": "0.0.29",
    "rxjs": "^5.1.0",
    "zone.js": "^0.7.6"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0-rc.4",
    "@angular/compiler-cli": "^2.4.0",
    "@ngrx/store-devtools": "^3.2.4",
    "@types/jasmine": "2.5.38",
    "@types/lodash": "ts2.0",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "json-server": "^0.10.1",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngrx-store-freeze": "^0.1.9",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.0.0"
  }
}
