# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style new line with a newline ending every file
# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 80
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default *md file
[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Set default *ts, js, json file
[*.{ts,js,json}]
indent_style = space
indent_size = 4
max_line_length = 180

# Set default *html file
[*.html]
indent_style = space
indent_size = 2

# Set default *scss, sass file
[*.{scss,sass}]
indent_style = space
indent_size = 4
